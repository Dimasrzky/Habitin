{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],

      "@/config/*": ["src/config/*"],
      "@/services/*": ["src/services/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/types/*": ["src/types/*"],

      "@components/*": ["components/*"],
      "@screens/*": ["app/screens/*"],
      "@utils/*": ["utils/*"],

      "@app/*": ["./*"]   // Tambahkan alias root baru
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
